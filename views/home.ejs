<!DOCTYPE html>
<html lang="en">
<head>
    <title>HomePage</title>
    <%- include('./partials/head') %>
    <!-- Add Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card-img-top {
            height: 320px;
            object-fit: cover;
        }
        .card-title {
            font-size: 1.25rem;
            text-transform: uppercase;
        }
        .card-text {
            font-size: 1rem;
        }
    </style>
</head>
<body>
    <!-- Include your original navbar -->
    <%- include('./partials/navbar') %>

    <div class="container mt-5">
        <!-- Page Heading -->
        <div class="text-center mb-4">
            <h1 class="display-4">Welcome to Blogify</h1>
            <p class="lead">Discover interesting articles and stories!</p>
        </div>

        <!-- Blog Cards -->
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% blogs.forEach(element => { %>
            <div class="col">
                <div class="card shadow-sm h-100">
                    <img src="<%= element.coverimageurl %>" class="card-img-top" alt="Blog Cover Image">
                    <div class="card-body">
                        <h5 class="card-title"><%= element.title %></h5>
                        
                        <a href="/blog/<%= element._id %>" class="btn btn-primary">View Blog</a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>

    <!-- Include your scripts -->
    <%- include('./partials/script') %>
</body>
</html>
